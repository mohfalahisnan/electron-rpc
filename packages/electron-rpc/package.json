{
  "name": "@mavolostudio/electron-rpc",
  "version": "1.0.1",
  "description": "A completely type-safe RPC (Remote Procedure Call) library for Electron applications. It eliminates the need for manual IPC event handling and ensures that your main and renderer processes stay in sync with strict TypeScript validation.",
  "homepage": "https://electron-rpc-docs.moh-falah-isnan.workers.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mavolostudio/electron-rpc.git",
    "directory": "packages/electron-rpc"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "zod": "^4.1.11"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./expose": {
      "types": "./dist/expose.d.ts",
      "import": "./dist/expose.js",
      "require": "./dist/expose.cjs"
    },
    "./tanstack": {
      "types": "./dist/tanstack.d.ts",
      "import": "./dist/tanstack.js",
      "require": "./dist/tanstack.cjs"
    }
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@tanstack/react-query": "^5.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "electron": "^38.1.2",
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@tanstack/react-query": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/mavolostudio/electron-rpc/issues"
  }
}