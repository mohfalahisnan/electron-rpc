{
  "name": "@mavolo/electron-rpc",
  "version": "1.0.0",
  "description": "Type-safe IPC for Electron with Zod validation",
  "homepage": "https://electron-rpc-docs.moh-falah-isnan.workers.dev/",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "zod": "^4.1.11"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./expose": {
      "types": "./dist/expose.d.ts",
      "import": "./dist/expose.js",
      "require": "./dist/expose.cjs"
    }
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "electron": "^38.1.2"
  }
}